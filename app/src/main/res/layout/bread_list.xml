<?xml version="1.0" encoding="utf-8"?>

<!-- 전체적으로 Relative 레이아웃 사용, 뷰를 수평으로 배치하고 배경 색을 지정해준다. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFF6DE">

    <!-- 아이템들을 담을 리스트 뷰를 생성한다. 크기와 마진 등을 설정해준다. -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:layout_margin="10dp"/>

    <!-- 버튼들을 담을 리니어 레이아웃을 생성한다. 리스트 뷰의 아래에 배치한다. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView"
        android:layout_gravity="bottom">

        <!-- 지도보기 버튼. 색, 크기와 마진, 텍스트 속성들을 정의해준다. -->
        <Button
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#FFE79F"
            android:text="지도보기"
            android:textColor="#89640E"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- 전화하기 버튼. 색, 크기와 마진, 텍스트 속성들을 정의해준다. -->
        <Button
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#FFE79F"
            android:text="전화하기"
            android:textColor="#89640E"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- 홈페이지 버튼. 색, 크기와 마진, 텍스트 속성들을 정의해준다. -->
        <Button
            android:id="@+id/site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#FFE79F"
            android:text="홈페이지"
            android:textColor="#89640E"
            android:textSize="30dp"
            android:textStyle="bold" />
    <!-- 버튼들이 모두 같은 가중치를 갖게 해 모두 동일하게 레이아웃을 차지하도록 한다. -->
    </LinearLayout>

</RelativeLayout>

