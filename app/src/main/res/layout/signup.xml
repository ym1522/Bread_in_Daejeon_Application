<?xml version="1.0" encoding="utf-8"?>

<!-- 전체적으로 리니어레이아웃 사용, 뷰를 수직으로 배치하고 배경 색을 지정해준다. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF6DE"
    tools:context=".signUp">

    <!-- 앱 로고 이미지를 표시할 이미지뷰. -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/app_logo"/>

    <!-- 사용자가 이름을 적을 에디트 텍스트. 가운데 정렬하고 크기, 마진을 설정해준다. 텍스트의 속성도 지정한다. -->
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="name"
        android:textColor="#AA926F"
        android:textSize="30sp" />

    <!-- 사용자가 이메일을 적을 에디트 텍스트. 가운데 정렬하고 크기, 마진을 설정해준다. 텍스트의 속성도 지정한다. -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:hint="email"
        android:textColor="#AA926F"
        android:textSize="30sp" />

    <!-- 사용자가 비밀번호를 적을 에디트 텍스트. 가운데 정렬하고 크기, 마진을 설정해준다. 텍스트의 속성도 지정한다. -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:hint="password"
        android:textColor="#AA926F"
        android:textSize="30sp" />

    <!-- 회원가입을 완료하는 버튼. 크기와 색, 마진, 텍스트의 속성 등을 지정해준다. -->
    <Button
        android:id="@+id/go_signup"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="#BCFFD6A3"
        android:text="Sign Up"
        android:textColor="#AA6C2A"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center|bottom" />

</LinearLayout>

